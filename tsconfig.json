{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true, // 生成目标文件的sourceMap文件
    "noImplicitAny": true, // 不允许隐式的 any 类型
    "removeComments": true, // 删除注释
    "module": "es6",
    "target": "es5", // 目标语言的版本
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  }
}
